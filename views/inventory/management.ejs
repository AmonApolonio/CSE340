<!DOCTYPE html>
<link rel="stylesheet" href="/css/inventory.css">
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div id="wrapper">
    <main>
      <h1>Inventory Management</h1>

      <% if (flash && flash.message && !flash.shown) { %>
        <div class="flash-message <%= flash.type || '' %>"><%= flash.message %></div>
      <% } %>

      <nav class="inventory-management-nav">
        <ul>
          <li><a href="/inv/add-classification">Add New Classification</a></li>
          <li><a href="/inv/add-inventory">Add New Inventory</a></li>
        </ul>
      </nav>

      <h2>Manage Inventory</h2>      
      <p>Select a classification from the list to see the items belonging to the classification.</p>
      
      <% if (locals.classificationList) { %>
        <%- classificationList %>
      <% } %>

      <table id="inventoryDisplay"></table>
      
      <noscript>JavaScript must be enabled to use this page.</noscript>

      <% if (typeof showForm !== 'undefined' && showForm === 'add-inventory') { %>
        <%- include('add-inventory', { classificationList, errors, flash, sticky }) %>
      <% } else if (typeof showForm !== 'undefined' && showForm === 'add-classification') { %>
        <%- include('add-classification', { errors, flash }) %>
      <% } %>
    </main>

    <%- include('../partials/footer') %>
  </div>
  <script src="/js/flash-message.js"></script>
  <script src="/js/inventory.js"></script>
</body>
</html>

<link rel="stylesheet" href="/css/inventory.css">
<main>
  <h1>Edit Inventory Item</h1>
  <p>Fill out the form below to modify a vehicle in the inventory. All fields are required.</p>

  <% if (locals.errors && Array.isArray(errors) && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="updateForm" action="/inv/update" method="post" novalidate>
    <label for="classificationList">Classification</label>
    <%- classificationList %>

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required maxlength="50" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required maxlength="50" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" required min="1900" max="2099" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required maxlength="1000"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

    <label for="inv_image">Image Path</label>
    <input type="text" id="inv_image" name="inv_image" required value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>">

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">

    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" required min="0" step="1" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">

    <label for="inv_miles">Miles</label>
    <input type="number" id="inv_miles" name="inv_miles" required min="0" step="1" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">

    <label for="inv_color">Color</label>
    <input type="text" id="inv_color" name="inv_color" required maxlength="20" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">    <input type="hidden" name="inv_id" value="<%= typeof inv_id !== 'undefined' ? inv_id : '' %>">

    <button type="submit" disabled>Update Vehicle</button>
    <p id="buttonMessage" class="button-message">Button is disabled until you make changes and all fields are valid.</p>
  </form>
</main>

<script src="/js/flash-message.js"></script>
<script src="/js/inv-update.js"></script>
